---
// Hero section - Full-width with image background and dark overlay
// Image: Polish-style single-family house, daylight, realistic
import heroImage from '../assets/modern-luxury-house-and-garden-2025-01-08-14-29-29-utc.jpg';
---

<section class="hero" id="hero" style={`background-image: url(${heroImage.src})`}>
  <div class="hero__overlay"></div>
  <div class="hero__content">
    <p class="hero__eyebrow">Argentech • Doradztwo techniczne</p>
    <h1 class="hero__title">Niezależny dobór ogrzewania do&nbsp;Twojego domu</h1>
    <p class="hero__subtitle">
      Decyzje oparte na obliczeniach technicznych i&nbsp;analizie kosztów, 
      a&nbsp;nie na ofertach producentów i&nbsp;instalatorów.
    </p>
    <div class="hero__cta">
      <button type="button" class="hero__btn" data-open-cta-modal>Zamów analizę</button>
      <p class="hero__microcopy">Niezależna analiza • bez sprzedaży i montażu</p>
    </div>
  </div>
  <div class="hero__scroll" aria-hidden="true">
    <span></span>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-size: cover;
    background-position: center;
    background-color: #1a1d21;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(26, 29, 33, 0.5) 0%,
      rgba(26, 29, 33, 0.6) 50%,
      rgba(26, 29, 33, 0.7) 100%
    );
  }

  .hero__content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: var(--space-xl) var(--space-md);
    max-width: 800px;
  }

  .hero__eyebrow {
    color: rgba(255, 255, 255, 0.7);
    font-size: var(--font-size-sm);
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: var(--space-md);
  }

  .hero__title {
    color: var(--color-white);
    font-size: var(--font-size-3xl);
    font-weight: 700;
    margin-bottom: var(--space-md);
    text-wrap: balance;
    line-height: 1.15;
    letter-spacing: -0.02em;
  }

  .hero__subtitle {
    color: rgba(255, 255, 255, 0.85);
    font-size: var(--font-size-lg);
    max-width: 580px;
    margin: 0 auto var(--space-xl);
    text-wrap: balance;
    line-height: 1.6;
  }

  .hero__cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
  }

  .hero__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-md) var(--space-xl);
    font-size: var(--font-size-lg);
    font-weight: 500;
    letter-spacing: 0.01em;
    background-color: var(--color-white);
    color: var(--color-dark-grey);
    border: none;
    border-radius: var(--radius-sm);
    cursor: pointer;
    transition: all var(--transition-fast);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.15);
  }

  .hero__btn:hover {
    background-color: #f5f5f5;
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  }

  .hero__btn:active {
    transform: translateY(0);
  }

  .hero__btn:focus-visible {
    outline: 2px solid var(--color-white);
    outline-offset: 3px;
  }

  .hero__microcopy {
    color: rgba(255, 255, 255, 0.6);
    font-size: var(--font-size-sm);
    margin: 0;
  }

  .hero__scroll {
    position: absolute;
    bottom: var(--space-lg);
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
  }

  .hero__scroll span {
    display: block;
    width: 24px;
    height: 40px;
    border: 2px solid rgba(255, 255, 255, 0.4);
    border-radius: 12px;
    position: relative;
  }

  .hero__scroll span::before {
    content: '';
    position: absolute;
    top: 8px;
    left: 50%;
    width: 4px;
    height: 8px;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 2px;
    transform: translateX(-50%);
    animation: scroll-hint 2s ease-in-out infinite;
  }

  @keyframes scroll-hint {
    0%, 100% { opacity: 1; transform: translateX(-50%) translateY(0); }
    50% { opacity: 0.3; transform: translateX(-50%) translateY(6px); }
  }

  @media (min-width: 768px) {
    .hero__title {
      font-size: var(--font-size-4xl);
    }

    .hero__subtitle {
      font-size: var(--font-size-xl);
    }

    .hero__scroll {
      bottom: var(--space-xl);
    }
  }

  @media (min-width: 1024px) {
    .hero__title {
      font-size: var(--font-size-5xl);
    }
  }
</style>
